{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" :[
        {
            "name" : "client",
            "image" : "270808/multi-client",
            "hostname": "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "270808/multi-server",
            "hostname": "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "270808/multi-worker",
            "hostname": "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "270808/multi-nginx",
            "hostname": "nginx",
            "essential" : true,
            "portMappings" :[
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }                

            ],
            "links" :["client","server"]

        }
    ]
}